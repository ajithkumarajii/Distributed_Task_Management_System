              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Team Member\",\n  \"email\": \"member@example.com\",\n  \"password\": \"Member@123\",\n  \"confirmPassword\": \"Member@123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/register",
              "host": ["{{base_url}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login as Admin",
          "event": [
