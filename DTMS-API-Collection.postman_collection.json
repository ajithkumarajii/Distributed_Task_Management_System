            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Project Manager\",\n  \"email\": \"manager@example.com\",\n  \"password\": \"Manager@123\",\n  \"confirmPassword\": \"Manager@123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/register",
              "host": ["{{base_url}}"],
              "path": ["auth", "register"]
